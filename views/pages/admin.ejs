<%- include ('../partials/header') %>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<body>
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">Admin</h3>
                </div>
            </div>
                                     



            <form action="/admin" method="post">
                <input class="input" name="itemID" placeholder="Item Exemple: 701 ">
                <br>
                <br>
                <input class="input" type="number" name="amountChange" placeholder="Nombre d'item(s) Exemple: -3">
                <br>
                <br>
                <input type="radio" name="incSetAmount" value="incChange"checked="checked">
                <label for="incChange">increment amount value</label>
                <input type="radio" name="incSetAmount" value="setChange" > 
                <label for="setChange">set amount value</label>
                

                <br>
                <br>
                <input class="input" type="number" name="priceChange" placeholder="Prix Exemple: 25">
                <br>
                <br>
                <input type="radio" name="incSetPrice" value="incPrice"checked="checked">
                <label for="incPrice">increment price value</label>
                <input type="radio" name="incSetPrice" value="setPrice" > 
                <label for="setPrice">set price value</label>
                

                <br>
                <br>
                <button class="primary-btn cta-btn">Mettre a jour</button>
            </form>

            <br>

            <%if (typeof items != 'undefined' && items.length>0) {%>
                <p class="<%= items[1]%>" id="messageCreation"><strong><%= items[0]%></strong></p> 
            <% }else {%>
                <p class="createAlert" id="messageConnexion" ></p>
            <% } %>

            <h3 class="title">liste des produits</h3>

            <div id="itemList">
            <table>
                <thead>
                <th>Id du produit</th>
                <th>Nom</th>
                <th>Stock</th>
                </thead>
                <tbody>
                </tbody>
            </table>
            </div>

            
        </div>
    </div>
    </body>
    <script type="text/javascript" src="/js/itemlist.js"></script>
    <%- include ('../partials/footer') %>