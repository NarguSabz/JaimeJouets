<%- include ('../partials/header') %>
<body>
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">Modifier adresse courriel</h3>
                </div>
            </div>
            <form action="/modifierEmail/emailModifiee" method="post">
                <input class="input" type="email" placeholder="Nouvelle adresse courriel" name="newEmail">
                <br>
                <br>
                <button class="primary-btn cta-btn">Confirmation</button>
            </form>

            <br>
            <%if (typeof items != 'undefined' && items.length>0) {%>
                <p class="<%= items[1]%>" id="messageCreation"><strong><%= items[0]%></strong></p> 
            <% }else {%>
                <p class="createAlert" id="messageConnexion" ></p>
            <% } %>
        </div>
    </div>
</body>
