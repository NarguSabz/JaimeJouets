                <!-- STORE -->
                <div id="store" class="col-md-9">
                    <!-- store top filter -->
                    <div class="store-filter clearfix">
                        <div class="store-sort">
                            <label>
                                Trier par:
                                <select id="selectorPrix" class="input-select" onchange='filtrer()' data-prix=<%=filtrePrix%> >
                                    <option value="1">Prix bas à élevé</option>
                                    <option value="-1">Prix élevé à bas</option>
                                </select>
                            </label>

                            <label>
                                Montrer:
                                <select id="selectorNombrePage" class="input-select" onchange='filtrer()' data-nbre-page=<%=nbreParPage%> >
                                    <option value="9">9</option>
                                    <option value="5">5</option>
                                </select>
                            </label>



                        </div>

                    </div>
                    <!-- /store top filter -->

                    <div id="conteneur">
                        <!-- store products -->
                        <div id="conteneurProd">
                            <div class="row">
                                <!-- product -->
                                <!--ce foreach prends comme variable 'produits' qui contient les 8 les plus recents produits-->

                                <div class="tab-content">
                                    <!-- product -->
                                    <!--ce boucle for itere pages par page-->
                                   <% if(nbrePages!=0){%>
                                    <h4>Resultats trouvés pour "<%=MotCherchee%>"</h4>

                                    <% for(var i=0, j=0; i< nbrePages; i++){%>
                                        <!--on s assure que par defaut la page 1 est activee-->
                                        <%if(i==0){%>
                                            <div id="tab<%=i+1%>" class="tab-pane fade in active">
                                                <%}else{%>
                                                    <div id="tab<%=i+1%>" class="tab-pane fade">
                                                        <%}%>
                                                            <!--ce boucle permet de remplir chaque page, rempli 20 produits par pages, tant qu on a pas mis tous les produits-->
                                                            <% for(var k=0; k< nbreParPage && j < produits.length;
                                                                j++,k++){ %>
                                                                <div class="col-md-4 col-xs-6">
                                                                    <a href="produit/<%=produits[j].numid %>">
                                                                        <div class="product">
                                                                            <div class="product-img">
                                                                                <!--on place le id du produit pour pouvoir chercher la route vers son image-->
                                                                                <img
                                                                                    src="./img/<%=produits[j].numid %>/<%=produits[j].numid %>-1.jpg">
                                                                                <div class="product-label">
                                                                                    <span class="new">NOUVEAU</span>
                                                                                </div>
                                                                            </div>
                                                                            <div class="product-body">
                                                                                <!--on place la marque du produit-->

                                                                                <p class="product-category">par
                                                                                    <%=produits[j].marques_id[0].Nom%>
                                                                                </p>
                                                                                <!--on place le nom du produit-->

                                                                                <h3 class="product-name">
                                                                                    <a
                                                                                        href="produit/<%=produits[j].numid %>">
                                                                                        <%=produits[j].nom %>
                                                                                    </a>

                                                                                </h3>
                                                                                <!--on place le prix du produit-->

                                                                                <h4 class="product-price">$
                                                                                    <%=produits[j].prix %>
                                                                                </h4>
                                                                                <!--on place la categorie d age du produit-->

                                                                                <p class="product-category">pour
                                                                                    <%=produits[j].categories_id[0].nom
                                                                                        %> ans
                                                                                </p>
                                                                                <div class="product-rating">
                                                                                    <%for(var l=0; l < produits[j].moyen ;l++ ){%>
                                                                                        <i class="fa fa-star"></i>
                                                                                        <%}for(var m=1; m < 5-produits[j].moyen; m++ ){%>
                                                                                            <i class="fa fa-star-o"></i>                                                         
                                                                                    <%}%>
                                                                                </div>
                                                                                <div class="product-btns">
                                                                                    <button class="add-to-wishlist"><i
                                                                                            class="fa fa-heart-o"></i><span
                                                                                            class="tooltipp">Ajout à la
                                                                                            liste de
                                                                                            souhait</span></button>
                                                                                </div>
                                                                            </div>
                                                                            <div class="add-to-cart">
                                                                                <button class="add-to-cart-btn"
                                                                                    onclick='ajoutAuPanier("<%=produits[j].nom%>","./img/<%=produits[j].numid %>/<%=produits[j].numid %>-1.jpg","<%=produits[j].numid%>","<%=produits[j].prix %>");'><i
                                                                                        class="fa fa-shopping-cart"></i>Ajout
                                                                                    au panier</button>
                                                                            </div>
                                                                        </div>

                                                                </div>
                                                                </a>
                                                                <%}%>
                                                    </div>
                                                    <%}%> <%}%>
                                                        <!-- /product -->
                                            </div>
                                </div>
                                <!-- /store products -->

