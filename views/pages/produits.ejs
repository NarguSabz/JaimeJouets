<%- include ('../partials/header') %>

    <!-- SECTION -->
    <div class="section" >
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- ASIDE -->
                <div id="aside" class="col-md-3">
                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Groupe d'âge</h3>
                        <div class="checkbox-filter">

                            <div class="input-checkbox">
                                <input type="checkbox" id="category-1">
                                <label for="category-1">
                                    <span></span>
                                    0 à 4 ans
                                    <!-- <small>(120)</small> -->
                                </label>
                            </div>

                            <div class="input-checkbox">
                                <input type="checkbox" id="category-2">
                                <label for="category-2">
                                    <span></span>
                                    5 à 6 ans
                                    <!-- <small>(740)</small> -->
                                </label>
                            </div>

                            <div class="input-checkbox">
                                <input type="checkbox" id="category-3">
                                <label for="category-3">
                                    <span></span>
                                    7 à 9 ans
                                    <!-- <small>(1450)</small> -->
                                </label>
                            </div>

                            <div class="input-checkbox">
                                <input type="checkbox" id="category-4">
                                <label for="category-4">
                                    <span></span>
                                    10 à 99 ans
                                    <!-- <small>(578)</small> -->
                                </label>
                            </div>

                        </div>
                    </div>
                    <!-- /aside Widget -->

                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Prix</h3>
                        <div class="price-filter">
                            <div id="price-slider"></div>
                            <div class="input-number price-min">
                                <input id="price-min" type="number">
                                <span class="qty-up">+</span>
                                <span class="qty-down">-</span>
                            </div>
                            <span>-</span>
                            <div class="input-number price-max">
                                <input id="price-max" type="number">
                                <span class="qty-up">+</span>
                                <span class="qty-down">-</span>
                            </div>
                        </div>
                    </div>
                    <!-- /aside Widget -->

                    <!-- aside Widget -->
                    <div class="aside">
                        <h3 class="aside-title">Marques</h3>
                        <div class="checkbox-filter">
                            <div class="input-checkbox">
                                <input type="checkbox" id="brand-1">
                                <label for="brand-1">
                                    <span></span>
                                    Hot Wheels
                                    <!-- <small>(578)</small> -->
                                </label>
                            </div>
                            <div class="input-checkbox">
                                <input type="checkbox" id="brand-2">
                                <label for="brand-2">
                                    <span></span>
                                    Vtech
                                    <!-- <small>(125)</small> -->
                                </label>
                            </div>
                            <div class="input-checkbox">
                                <input type="checkbox" id="brand-3">
                                <label for="brand-3">
                                    <span></span>
                                    Barbie
                                    <!-- <small>(755)</small> -->
                                </label>
                            </div>
                            <div class="input-checkbox">
                                <input type="checkbox" id="brand-4">
                                <label for="brand-4">
                                    <span></span>
                                    Lego
                                    <!-- <small>(578)</small> -->
                                </label>
                            </div>
                            <div class="input-checkbox">
                                <input type="checkbox" id="brand-5">
                                <label for="brand-5">
                                    <span></span>
                                    Fisher-Price
                                    <!-- <small>(578)</small> -->
                                </label>
                            </div>


                        </div>
                    </div>
                    <!-- /aside Widget -->


                    <!-- /aside Widget -->
                </div>
                <!-- /ASIDE -->

                <!-- STORE -->
                <div id="store" class="col-md-9">
                    <!-- store top filter -->
                    <div class="store-filter clearfix">
                        <div class="store-sort">
                            <label>
                                Trier par:
                                <select class="input-select">
                                    <option value="0">Populaire</option>
                                    <option value="1">Position</option>
                                </select>
                            </label>
                           
                            <label>
                                Montrer:
                                <select class="input-select" name="q" onchange="mettreAJour(this.value)" >
                                    <option value="9">9</option>
                                    <option value="5">5</option>
                                </select>
                            </label>
                        

                        </div>
                        
                    </div>
                    <!-- /store top filter -->

                    <div id="conteneur">
                    <!-- store products -->
                    <div id="conteneurProd">
                    <div class="row">
                        <!-- product -->
                        <!--ce foreach prends comme variable 'produits' qui contient les 8 les plus recents produits-->

                        <div class="tab-content">
                            <!-- product -->
                            <!--ce boucle for itere pages par page-->
                            <% for(var i=0, j=0; i< nbrePages; i++){%>
                                <!--on s assure que par defaut la page 1 est activee-->
                                <%if(i==0){%>
                                    <div id="tab<%=i+1%>" class="tab-pane fade in active">
                                        <%}else{%>
                                            <div id="tab<%=i+1%>" class="tab-pane fade">
                                                <%}%>
                                                    <!--ce boucle permet de remplir chaque page, rempli 20 produits par pages, tant qu on a pas mis tous les produits-->
                                                    <% for(var k=0; k< nbreParPage && j < produits.length; j++,k++){ %>
                                                        <div class="col-md-4 col-xs-6">
                                                            <a href="produit/<%=produits[j].numid %>">
                                                                <div class="product">
                                                                    <div class="product-img">
                                                                        <!--on place le id du produit pour pouvoir chercher la route vers son image-->
                                                                        <img src="./img/<%=produits[j].numid %>/<%=produits[j].numid %>-1.jpg">
                                                                        <div class="product-label">
                                                                            <span class="new">NOUVEAU</span>
                                                                        </div>
                                                                    </div>
                                                                    <div class="product-body">
                                                                        <!--on place la marque du produit-->

                                                                        <p class="product-category">par
                                                                            <%=produits[j].marques_id[0].Nom%>
                                                                        </p>
                                                                        <!--on place le nom du produit-->

                                                                        <h3 class="product-name">
                                                                            <a href="produit/<%=produits[j].numid %>">
                                                                                <%=produits[j].nom %>
                                                                            </a>

                                                                        </h3>
                                                                        <!--on place le prix du produit-->

                                                                        <h4 class="product-price">$
                                                                            <%=produits[j].prix %>
                                                                        </h4>
                                                                        <!--on place la categorie d age du produit-->

                                                                        <p class="product-category">pour
                                                                            <%=produits[j].categories_id[0].nom %> ans</p>
                                                                        <div class="product-rating">
                                                                            <i class="fa fa-star"></i>
                                                                            <i class="fa fa-star"></i>
                                                                            <i class="fa fa-star"></i>
                                                                            <i class="fa fa-star"></i>
                                                                            <i class="fa fa-star"></i>
                                                                        </div>
                                                                        <div class="product-btns">
                                                                            <button class="add-to-wishlist"><i
                                                                                class="fa fa-heart-o"></i><span
                                                                                class="tooltipp">Ajout à la liste de souhait</span></button>
                                                                        </div>
                                                                    </div>
                                                                    <div class="add-to-cart">
                                                                        <button class="add-to-cart-btn" onclick='ajoutAuPanier("<%=produits[j].nom%>","./img/<%=produits[j].numid %>/<%=produits[j].numid %>-1.jpg","<%=produits[j].numid%>","<%=produits[j].prix %>");'><i
                                                                            class="fa fa-shopping-cart"></i>Ajout au panier</button>
                                                                    </div>
                                                                </div>

                                                        </div>
                                                        </a>
                                                        <%}%>
                                            </div>
                                            <%}%>
                                                <!-- /product -->
                                    </div>
                        </div>
                        <!-- /store products -->

                        <!-- store bottom filter -->
                        <div class="store-filter clearfix">
                            <span class="store-qty"></span>
                            <ul class="store-pagination" style="float:none;">
                                <!--ce boucle permet de mettre des referance en bas de la page vers chacune des pages, le nombre est defini par le nombre de pages existant-->
                                
                                <% for(var i=0; i< nbrePages; i++){%>
                                    <!--on s assure que par defaut la page 1 est activee-->

                                    <%if(i==0){%>
                                        <li class="active" data-toggle="tab" href="#tab<%=i+1%>">
                                            <%=i+1%>
                                        </li>
                                        <%}else{%>
                                            <li data-toggle="tab" href="#tab<%=i+1%>">
                                                <%=i+1%>
                                            </li>
                                            <%}}%><%if(nbrePages>1){%>
                                                <li data-toggle="tab" href="#tabx" href="#"><i class="fa fa-angle-right"></i></li><%}else if(nbrePages==0){%>
                                                    <h3>Aucun resultats trouvés pour "<%=recherche%>"</h3>
                                                    <%}%>
                            </ul>
                        </div>
                        <!-- /store bottom filter -->
                    </div>
                </div>
                </div>
                    <!-- /STORE -->
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /SECTION -->
        <%- include ('../partials/footer') %>