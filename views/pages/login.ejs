<%- include ('../partials/header') %>

<script src="ejs.js"></script>
<script src='https://www.google.com/recaptcha/api.js'></script>

<body>
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">Connexion</h3>
                </div>
            </div>

            <form action="/login" method="post">
                <input class="input" name="username" placeholder="Nom d'utilisateur">
                <br>
                <br>
                <input class="input" type="password" name="passwordUser" placeholder="Mot de passe">
                <br>
                <br>
                <div class="g-recaptcha" data-sitekey="6LebWCMfAAAAAPh53ZUANtCluXta0hjSMuijEXuw"></div><br>
                <button class="primary-btn cta-btn">Connexion</button>
            </form>

            <br>

            <%if (typeof items != 'undefined' && items.length>0) {%>
                <p class="<%= items[1]%>" id="messageCreation"><strong><%= items[0]%></strong></p> 
            <% }else {%>
                <p class="createAlert" id="messageConnexion" ></p>
            <% } %>
            
          

            <div class="section-title">
                <h3 class="title">Oublier votre mot de passe ? Trouvez-le!</h3>
            </div>

            <form action="/forgotPassword" method="get">
                <button class="primary-btn cta-btn">trouver mon mot de passe</button>
            </form>

           
            <br>

            <div class="section-title">
                <h3 class="title">Vous n'avez de compte ? Inscrivez-vous!</h3>
            </div>

            <form action="/creerUnCompte" method="get">
                <button class="primary-btn cta-btn">Inscription</button>
            </form>

            <br>
            <br>
            <br>
            <br>

        </div>
    </div>
    </body>

