    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">

                <!-- section title -->
                <div class="col-md-12">
                    <div class="section-title">
                        <h3 class="title">Nouveaux produits</h3>
                        <div class="section-nav">
                            <ul class="section-tab-nav tab-nav">
                                <li class="active"><a data-toggle="tab" href="#tab1">Toutes les marques</a></li>
                                <li><a data-toggle="tab" href="#tab2">Barbie</a></li>
                                <li><a data-toggle="tab" href="#tab3">Fisher-Price</a></li>
                                <li><a data-toggle="tab" href="#tab4">Hot Wheels</a></li>
                                <li><a data-toggle="tab" href="#tab5">Lego</a></li>
                                <li><a data-toggle="tab" href="#tab6">Vtech</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /section title -->

                <!-- Products tab & slick -->
                <div class="col-md-12">
                    <div class="row">
                        <div class="products-tabs">
                            <!-- tab -->
                            <div id="tab1" class="tab-pane active">
                                <div class="products-slick" data-nav="#slick-nav-1">
                                    <!-- product -->
                                    <!--ce foreach prends comme variable 'produits' qui contient les 8 les plus recents produits-->
                                    <% produits.forEach(function(produit) { %>

                                        <div class="product">
                                            <a href="produit/<%=produit.numid%>">
                                                <div class="product-img">
                                                    <!--on place le id du produit pour pouvoir chercher la route vers son image-->
                                                    <img src="./img/<%=produit.numid %>/<%=produit.numid %>-1.jpg" alt="">
                                                    <div class="product-label">
                                                        <span class="new">NOUVEAU</span>
                                                    </div>
                                                </div>
                                                <div class="product-body">
                                                    <!--on place la marque du produit-->

                                                    <p class="product-category">par
                                                        <%=produit.marques_id[0].Nom %>
                                                    </p>
                                                    <!--on place le nom du produit-->

                                                    <h3 class="product-name">
                                                        <a href="produit/<%=produit.numid%>">
                                                            <%=produit.nom %>
                                                        </a>

                                                    </h3>
                                                    <!--on place le prix du produit-->

                                                    <h4 class="product-price">$
                                                        <%=produit.prix %>
                                                    </h4>
                                                    <!--on place la categorie d age du produit-->

                                                    <p class="product-category">pour
                                                        <%=produit.categories_id[0].nom %>
                                                            ans</p>
                                                    <div class="product-rating">
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                    </div>
                                                    <div class="product-btns">
                                                        <button class="add-to-wishlist"><i
                                                                class="fa fa-heart-o"></i><span class="tooltipp">Ajout à la liste de souhait</span></button>
                                                    </div>
                                                </div>
                                                <div class="add-to-cart">
                                                    <button class="add-to-cart-btn" onclick='ajoutAuPanier("<%=produit.nom%>","./img/<%=produit.numid %>/<%=produit.numid %>-1.jpg","<%=produit.numid%>","<%=produit.prix %>");'><i class="fa fa-shopping-cart"></i>Ajout au panier</button>
                                                </div>
                                            </a>
                                        </div>
                                        <%}); %>
                                            <!-- /product -->
                                </div>
                                <div id="slick-nav-1" class="products-slick-nav"></div>
                            </div>
                            <% for(var j=0; j<=marques.length; j++){%>
                                <div id="tab<%=j+2%>" class="tab-pane fade">
                                    <div class="products-slick" data-nav="#slick-nav-1">
                                        <% for(var i=0; i< produits.length; i++){%>
                                            <% if(produits[i].marques_id[0].Nom==marques[j] ) { %>

                                                <!-- product -->
                                                <!--ce foreach prends comme variable 'produits' qui contient les 8 les plus recents produits-->
                                                <div class="product">
                                                    <a href="produits[i]/<%=produits[i].numid%>">
                                                        <div class="product-img">
                                                            <!--on place le id du produit pour pouvoir chercher la route vers son image-->
                                                            <img src="./img/<%=produits[i].numid %>/<%=produits[i].numid %>-1.jpg" alt="">
                                                            <div class="product-label">
                                                                <span class="new">NOUVEAU</span>
                                                            </div>
                                                        </div>
                                                        <div class="product-body">
                                                            <!--on place la marque du produit-->

                                                            <p class="product-category">par
                                                                <%=produits[i].marques_id[0].Nom %>
                                                            </p>
                                                            <!--on place le nom du produit-->

                                                            <h3 class="product-name">
                                                                <a href="produit/<%=produits[i].numid %>">
                                                                    <%=produits[i].nom %>
                                                                </a>

                                                            </h3>
                                                            <!--on place le prix du produit-->

                                                            <h4 class="product-price">$
                                                                <%=produits[i].prix %>
                                                                    <del class="product-old-price">$990.00</del>
                                                            </h4>
                                                            <!--on place la categorie d age du produit-->

                                                            <p class="product-category">pour
                                                                <%=produits[i].categories_id[0].nom %> ans
                                                            </p>
                                                            <div class="product-rating">
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                                <i class="fa fa-star"></i>
                                                            </div>
                                                            <div class="product-btns">
                                                                <button class="add-to-wishlist"><i
                                                                        class="fa fa-heart-o"></i><span
                                                                        class="tooltipp">Ajouter à la liste de souhait</span></button>
                                                            </div>
                                                        </div>
                                                        <div class="add-to-cart">
                                                            <button class="add-to-cart-btn" onclick='ajoutAuPanier("<%=produits[i].nom%>","./img/<%=produits[i].numid %>/<%=produits[i].numid %>-1.jpg","<%=produits[i].numid%>","<%=produits[i].prix %>");'><i
                                                                    class="fa fa-shopping-cart"></i>Ajout au panier</button>
                                                        </div>
                                                    </a>
                                                </div>
                                                <%}}%>

                                                    <!-- /product -->
                                    </div>

                                    <div id="slick-nav-1" class="products-slick-nav">

                                    </div>

                                    <!-- /tab -->
                                </div>
                                <%}%>
                                    <!-- /tab -->
                        </div>
                    </div>
                </div>
                <!-- Products tab & slick -->
